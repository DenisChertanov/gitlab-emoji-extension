{
    "name": "__MSG_name__",
    "version": "1.0.0",
    "manifest_version": 3,
    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
        "32": "./icons/crying_emoji_32.png",
        "64": "./icons/crying_emoji_64.png",
        "128": "./icons/crying_emoji_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gitlab.services.mts.ru/*"
            ],
            "run_at": "document_idle",
            "all_frames": false,
            "js": [
                "content-script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content-script.css",
                "execute.js"
            ],
            "matches": [
                "https://gitlab.services.mts.ru/*"
            ]
        }
    ]
}